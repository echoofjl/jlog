---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>
    <body>
        <Header />
		<main>
			<div class="title">
			  <h1>{title}</h1>
			  <div class="date">
				<FormattedDate date={pubDate} />
				{updatedDate && (
				  <div>
					Last updated on <FormattedDate date={updatedDate} />
				  </div>
				)}
			  </div>
			</div>
			<article class="prose">
			  <slot />
			</article>
		  </main>
		  
    </body>
</html>

<style>
	:root {
    --font-serif: 'Source Serif Pro', Georgia, serif;
    --font-sans: 'Inter', system-ui, sans-serif;
    --text-color: #1e1e1e;
    --gray: #666;
    --accent: #3b82f6; 
    --bg: #f9f9f9;
  }
  
  body {
    font-family: var(--font-sans);
    color: var(--text-color);
    background-color: white;
    line-height: 1.7;
    padding: 2rem 1rem;
    max-width: 768px;
    margin: auto;
  }
  
  main {
    padding-top: 2rem;
  }
  
  .title h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .date {
    font-size: 0.9rem;
    color: var(--gray);
    margin-bottom: 2rem;
  }
  
  article.prose {
    font-family: var(--font-serif);
  }
  
  article.prose h2, article.prose h3 {
    font-weight: 600;
    margin-top: 2.2rem;
    margin-bottom: 1rem;
  }
  
  article.prose h2 {
    font-size: 1.5rem;
  }
  
  article.prose h3 {
    font-size: 1.2rem;
  }
  
  article.prose p {
    margin-bottom: 1rem;
  }
  
  article.prose a {
    color: var(--accent);
    text-decoration: underline;
  }
  
  article.prose code {
    padding: 0.1em 0.3em;
    border-radius: 2px;
    font-size: 0.9em;
    font-family: Menlo, Consolas, monospace;
  }
  
  
  article.prose pre {
    background: #111827;
    color: #e5e7eb;
    padding: 1rem;
    overflow: auto;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }
  
  /* 引用 */
  article.prose blockquote {
    border-left: 4px solid #ddd;
    padding-left: 1rem;
    color: #555;
    font-style: italic;
    margin: 1.5rem 0;
  }
  
  /* 图片 */
  article.prose img {
    max-width: 100%;
    border-radius: 8px;
    margin: 1.5rem 0;
  }
  
</style>