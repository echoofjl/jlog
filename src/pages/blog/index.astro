---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../utils/consts';
import { getCollection } from 'astro:content';


const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header/>
		<main>
			<section>
				<ul class="blog-list">
					{
					  posts.map((post) => (
						<li class="blog-card">
						  <div class="card-inner">
							<h3 class="card-title">
							  <a href={`${import.meta.env.BASE_URL}/blog/${post.id}/`}>
								{post.data.title}
							  </a>
							</h3>
							<p class="card-desc">{post.data.description}</p>
							{
							  post.data.tags && (
								<ul class="card-tags">
								  {post.data.tags.map((tag) => (
									<li class="tag">{tag}</li>
								  ))}
								</ul>
							  )
							}
						  </div>
						</li>
					  ))
					}
				  </ul>  
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.blog-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

.blog-card {
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 1.5rem;
  transition: background 0.3s ease, border-color 0.3s ease;
}

.blog-card:hover {
  background: #f9fafb;
  border-color: #cbd5e1;
}

.card-title {
  margin: 0 0 0.75rem 0;
  font-size: 1.25rem;
  font-weight: 600;
}

.card-title a {
  text-decoration: none;
  color: #111827;
}

.card-title a:hover {
  color: #2563eb;
}

.card-desc {
  margin: 0 0 1rem 0;
  color: #4b5563;
  font-size: 1rem;
  line-height: 1.6;
}

.card-tags {
  display: flex;
  flex-wrap: nowrap; 
  overflow-x: auto; 
  gap: 0.5rem;
  margin: 0;
  padding: 0;
  list-style: none;
}

.card-tags .tag {
  background: #ffffff; 
  color: #4f46e5; 
  font-size: 0.65rem; 
  padding: 0.2em 0.4em; 
  border: 1px solid #4f46e5; 
  border-radius: 4px; 
  text-transform: uppercase;
  letter-spacing: 0.03em;
  font-weight: 500;
  white-space: nowrap;
}

.card-tags .tag:hover {
  background: #4f46e5; 
  color: #ffffff; 
  border-color: #4f46e5;
}

</style>
