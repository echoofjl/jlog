---
interface Props {
  title: string;
  posts: Array<{ id: string; data: { title: string; pubDate: Date } }>;
}
const { title, posts } = Astro.props;
---

<section class="blog-item">
  <h2>{title}</h2>
  <ul class="post-list">
    {posts.map((post) => (
      <li class="post-list-item">
        <a href={`${import.meta.env.BASE_URL}/blog/${post.id}/`} class="post-link">
          <span class="post-title">{post.data.title}</span>
          <span class="post-date">{new Date(post.data.pubDate).toLocaleDateString()}</span>
        </a>
      </li>
    ))}
  </ul>
</section>

<style>
  .blog-item {
    margin-bottom: 3rem;
  }

  .blog-item h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .post-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-list-item {
    border-bottom: 1px solid #eee;
  }

  .post-link {
    display: flex;
    justify-content: space-between; /* ðŸ”¥ title and date push to far left and right */
    align-items: center;
    padding: 0.75rem 1rem;
    text-decoration: none; /* ðŸ”¥ remove underline */
    color: inherit; /* ðŸ”¥ no blue */
    transition: background-color 0.2s;
  }

  .post-link:hover {
    background-color: #f5f5f5;
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .post-date {
    font-size: 0.9rem;
    color: var(--gray, #666);
    margin-left: 1rem;
    flex-shrink: 0; /* ðŸ”¥ prevent date from squeezing */
    white-space: nowrap;
  }
</style>
