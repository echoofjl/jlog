---
import { GITHUB_REPO } from "../utils/consts";
const projects = [
  { name: "My Frontend learning notes", repoName: "frontend-bootcamp" },
  { name: "Project Two", repoName: "project-two" },
  { name: "Project Three", repoName: "project-three" },
];
---

<section class="my-projects">
  <h2>My Projects</h2>
  <div class="project-list">
    {
      projects.map((project) => (
        <a
          href={`${GITHUB_REPO}/${project.repoName}`}
          target="_blank"
          rel="noopener noreferrer"
          class="project-item"
        >
          {project.name}
        </a>
      ))
    }
  </div>
</section>

<style>
  .my-projects {
    margin-top: 2rem;
    text-align: center;
  }

  .project-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .project-item {
    padding: 0.25rem 0.5rem;
    transition: color 0.2s ease;
  }

  .project-item:hover {
    color: var(--text);
  }
</style>
