---
import { GITHUB_REPO } from "../utils/consts";
const projects = [
  { name: "My Frontend learning notes", repoName: "frontend-bootcamp" },
  { name: "Project Two", repoName: "project-two" },
  { name: "Project Three", repoName: "project-three" },
];
---

<section class="my-projects">
  <h2>My Projects</h2>
  <div class="project-list">
    {
      projects.map((project) => (
        <a
          href={`${GITHUB_REPO}/${project.repoName}`}
          target="_blank"
          rel="noopener noreferrer"
          class="project-item"
        >
          {project.name}
        </a>
      ))
    }
  </div>
</section>

<style>
  .my-projects {
    margin-top: 2rem;
    text-align: center;
  }

  .project-list {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .project-item {
    display: inline-block;
    padding: 0.5rem 1rem;
    color: var(--text);
    background-color: var(--accent);
    text-decoration: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .project-item:hover {
    background-color: var(--accent-dark);
  }
</style>
