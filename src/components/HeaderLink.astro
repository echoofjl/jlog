---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
// Ensure href always starts with /jlog
const adjustedHref = String(href).startsWith('/jlog') ? String(href) : `/jlog${String(href)}`;
const base = import.meta.env.BASE_URL;
const pathname = Astro.url.pathname;

// Construct full href with base
const fullHref = base.endsWith('/') ? base.slice(0, -1) + href : base + href;
const isActive = pathname === fullHref;
---

<a href={adjustedHref} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>

<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
